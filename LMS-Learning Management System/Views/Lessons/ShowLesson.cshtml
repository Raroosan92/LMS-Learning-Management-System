        .contact .controls .write {
            position: absolute;
            z-index: 2;
            right: 20px;
            bottom: -24px;
            width: 48px;
            height: 48px;
            border-radius: 24px;
            cursor: pointer;
            box-shadow: 0 4px 5px #d8d8d8;
            background: #39bee8 no-repeat 50% 50%;
        }

        .contact .controls .icon {
            position: absolute;
            z-index: 2;
            top: 18px;
