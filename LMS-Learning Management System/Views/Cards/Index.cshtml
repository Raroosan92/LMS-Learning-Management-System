@model IEnumerable<LMS_Learning_Management_System.Models.Mixed_Cards_CardDetails>

@{
    ViewData["Title"] = "عرض البطاقات";
}

<h1>المحتويات</h1>
<style>
    /* Define your custom styles for the notification */
    .notification-custom {
        background-color: #3498db; /* Blue background color */
        color: #ffffff; /* White text color */
        border: 2px solid #2980b9; /* Border color */
    }

        /* Define your custom styles for the notification close button */
        .notification-custom .notify-close {
            color: #ffffff; /* White color for close button */
        }

    /* Override the default styles for other notification types as needed */
</style>
<p style="background-color: darkseagreen;width: fit-content;border-radius: 5px;" id="ccards"></p>
<p>
    <a asp-action="Create" class="btn btn-success">اضافة جديدة</a>
</p>
<table id="classes" class="table table-striped table-bordered table-inverse table-responsive " style="font-size: 17px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfSubjects)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.User)
            </th>*@
            <th></th>
        </tr>

    </thead>
</table>
@section scripts {
    <script>
        var cardsWithUserDescCount = 0; // Define the external variable to store the count

        $(document).ready(function () {
            $("#classes").DataTable({
                "ajax": {
                    "url": "@Url.Action("GetData", "Cards")",
                    "type": "POST",
                    "data": "{}",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "cardNo" },
                    { "data": "cardPassword" },
                    { "data": "numberOfSubjects" },
                    { "data": "cardPrice" },
                    { "data": "status2" },
                    {
                        "data": "userdesc",
                    },
                    {
                        "data": "id", "render": function (data) {
                            return "<a asp-action='Edit' style='font-size: 15px;' onclick=PopupFormCource2('@Url.Action("Edit", "Cards")/" + data + "') class='btn btn-warning'>تعديل</a> | <a asp-action='Details' style='font-size: 15px;' onclick=PopupFormCource('@Url.Action("Details", "Cards")/" + data + "') class='btn btn-info'>التفاصيل</a> | <a asp-action='Delete' style='font-size: 15px;' onclick=DeleteCource(" + data + ") class='btn btn-danger'>حذف</a> | <a asp-action='MakeNew' style='font-size: 15px;' onclick=MakeNewF(" + data + ") class='btn btn-dark'>اعادة تجديد</a>";
                        },
                        "orderable": true,
                        "searchable": true,
                        "width": "auto"
                    }
                ],
                "language": {
                    "emptyTable": "لا يوجد بيانات يرجى الضغط على زر اضافة جديدة"
                },
                "initComplete": function (settings, json) {
                    // Iterate over the data to count cards with non-null userdesc
                    json.data.forEach(function (item) {

                        if (item.userdesc !== null && item.userdesc !== "") {
                            cardsWithUserDescCount++;
                        }
                    });
                    $("#ccards").text("عدد البطاقات المباعة " + cardsWithUserDescCount);
                }
            });
        });







        function PopupFormCource2(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'البطاقات',
                        height: 500,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });

                });
        }

        function PopupFormCource(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'البطاقات',
                        height: 500,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });

                });
        }



        function DeleteCource(id) {
            if (confirm('هل أنت متأكد أنك تريد حذف السجل؟')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Cards")/' + id,
                    success: function (data) {
                        if (data.success) {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "notification-custom"
                            })
                            setTimeout(function () {
                                window.location.reload();
                            }, 3000);
                        }
                    }

                });
            }
        }



        function MakeNewF(id) {
            if (confirm('هل أنت متأكد من اعادة تجديد البطاقة الحالية؟')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("MakeNew", "Cards")/' + id,
                    success: function (data) {
                        if (data.success) {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "notification-custom"
                            })
                            setTimeout(function () {
                                window.location.reload();
                            }, 3000);
                        }
                    }

                });
            }
        }
    </script>
}
