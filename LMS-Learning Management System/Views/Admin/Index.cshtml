@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "المستخدمين";
}

<h1 class="bg-info text-white">جميع المستخدمين</h1>
<a asp-action="Create" class="btn btn-secondary">انشاء مستخدم جديد</a>

<table class="table table-sm table-bordered">
	<tr>
		<th>المعرف</th>
		<th>الاسم</th>
		<th>الايميل</th>
		<th>تعديل</th>
		<th>حذف</th>
	</tr>
	@foreach (AppUser user in Model)
	{
		<tr>
			<td>@user.Id</td>
			<td>@user.UserName</td>
			<td>@user.Email</td>
			<td>
				<a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
					تعديل
				</a>
			</td>
			<td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        حذف
                    </button>
                </form>
            </td>
		</tr>
	}
</table>