                alert("يرجى اختيار المواد الخاصة بالمعلم")
                event.preventDefault();
                return false;
            }

            else if (Class == "" || Class == '-- أختر --') {
                alert("يرجى اختيار الصفوف الخاصة بالمعلم")
                event.preventDefault();
                return false;
            }
            else {
                return true;
            }
        }
        else {

            if (Role == '-- أختر --') {
                alert("يرجى اختيار نوع المستخدم (الصلاحية)");
                event.preventDefault();
                return false;
            }
        }
    }

</script>

