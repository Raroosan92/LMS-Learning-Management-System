            <div class="form-group" id="Class_D" style="display:none">
                <label asp-for="ClassId" class="control-label"></label>
                <select id="lstClasses" name="lstClasses" multiple multiselect-search="true" multiselect-select-all="true" asp-items="ViewBag.ClassId" class="form-control">
                    <option>-- أختر --</option>
                </select>

            </div>


        }

    }
    <button type="submit" class="btn btn-primary">انشاء</button>
    @{
        var Role = "";
        if (User.IsInRole("admin"))
        {
            Role = "admin";
            <input type="hidden" id="Role_H" value="@Role" />
        }
        else
