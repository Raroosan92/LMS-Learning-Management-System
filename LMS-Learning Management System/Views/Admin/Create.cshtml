<script>
    $("[id$=RoleId]").on('change', function () {

        var SelectedRoleId = $("#RoleId :selected").text();
        if (SelectedRoleId.toLocaleLowerCase() == "teacher") {
            $("#SubjectId_D").css("display", "block");
            $("#Class_D").css("display", "block");
        }
        else {
            $("#SubjectId_D").css("display", "none");
            $("#Class_D").css("display", "none");
        }
        $('#UserTypeDesc').val($("#RoleId :selected").text());

    });


    function CheckList() {
