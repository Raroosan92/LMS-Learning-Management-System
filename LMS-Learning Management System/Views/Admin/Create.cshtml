<script type="text/javascript">
    $(function () {
        $('#lstSubjecs').multiselect({
            includeSelectAllOption: true
        });
    });

    $(function () {
        $('#lstClasses').multiselect({
            includeSelectAllOption: true
        });
    });


    var PhoneNoResult;
    $("[id$=PhoneNumber]").on('change', function () {
       
        formatJordanianMobileNumber();
        if (PhoneNoResult==true) {
            $('#Name').val($('#PhoneNumber').val());
            var email = $('#PhoneNumber').val() + '@@' + $('#PhoneNumber').val() + '.com';
            $('#Email').val(email);
        }
    });

    function formatJordanianMobileNumber() {
        var mobileNumber = $('#PhoneNumber').val();

        // Remove non-digit characters
        var cleanedNumber = mobileNumber.replace(/\D/g, '');
        // Check if the number starts with '7' (Jordanian mobile number prefix)
        if (/^962/.test(cleanedNumber) && (cleanedNumber.length == 10 || cleanedNumber.length == 12)) {
            // Format the number to the Jordanian pattern
            var formattedNumber = '0' + cleanedNumber.substring(3, 12);
            $('#PhoneNumber').val(formattedNumber)
            $("#PhoneNumber").attr('maxlength', '10');
            PhoneNoResult = true;
        }
        else if (/^0/.test(cleanedNumber) && cleanedNumber.length==10 ) {
            $('#PhoneNumber').val(cleanedNumber)
            $("#PhoneNumber").attr('maxlength', '10');
            PhoneNoResult = true;

        }
        else {
            alert('الرقم الذي تحاول التسجيل به رقم غير اردني يرجى كتابة رقم الهاتف والذي يبدأ ب +962');
            PhoneNoResult = false;

        }
    }
</script>



