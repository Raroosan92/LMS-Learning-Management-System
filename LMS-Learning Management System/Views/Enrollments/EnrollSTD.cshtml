    $(function () {
        $("#lstSubjecs").change(function () {
            var NumberOfSubjects = $('#NumberOfSubjects').val();

            var selectedCount = $("#lstSubjecs option:selected").length;
            if (selectedCount > NumberOfSubjects) {
                alert("لقد تخطيت عدد المواد المسموح بالتسجيل بها, العدد المسموح به هو " + NumberOfSubjects + "");
                window.location.reload()

            }
        });
    });

    function CheckList() {
        var Subject = $("#lstSubjecs").val();
        var Class = $("#lstClasses").val();

        if (Subject == "" || Subject == '-- أختر --') {
            alert("يرجى اختيار المواد ")
            event.preventDefault();
            return false;
        }

        else if (Class == "" || Class == '-- أختر --') {
            alert("يرجى اختيار الصف ")
            event.preventDefault();
            return false;
        }
        else {
            return true;

        }
    }
