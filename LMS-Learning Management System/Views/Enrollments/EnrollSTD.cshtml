@model LMS_Learning_Management_System.Models.Enrollment

@{
    ViewData["Title"] = "التسجيل في الحصص";
}

<style>
   

    .global-container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

   

    .card-title {
        font-weight: 300;
    }

    .btn {
        font-size: 14px;
        margin-top: 20px;
    }

    .login-form {
        width: 330px;
        margin: 20px;
    }

    .sign-up {
        text-align: center;
        padding: 20px 0 0;
    }

    .alert {
        margin-bottom: -30px;
        font-size: 13px;
        margin-top: 20px;
    }
    .wrapper {
        margin: 10vh;
    }
</style>

<section class="wrapper">
    <div class="container">
        <div class="row">
            <div class="global-container">
                <div class="card login-form">
                    <div class="card-body">
                        <h3 class="card-title text-center">ادخل تفاصيل البطاقة</h3>
                        <div class="card-text">

                            <div class="form-group">
                                <label>رقم البطاقة</label>
                                <input type="number" class="form-control form-control-sm" asp-for="Card_No">
                            </div>
                            <div class="form-group">
                                <label>الرقم السري للبطاقة</label>
                                <input class="form-control form-control-sm" asp-for="Password_Card">
                            </div>
                            <a id="Enroll_Btn" class="btn btn-outline-danger">تسجيل</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/jquery3.3.1.js"></script>
<script>
    $('#Enroll_Btn').on('click', function () {
        var Card_No = $('#Card_No').val();
        var Password_Card = $('#Password_Card').val();
        if (confirm("هل انت متأكد من معلومات البطاقة")) {
            $.ajax({
                url: "/Enrollments/EnrollSTD1",
                type: "POST",
                data: { "Card_No": Card_No, "Password_Card": Password_Card },
                success: function (response) {
                    alert(response.message);
                },
                error: function (response) {
                    alert(response.message);
                }
            });
        }
    });
</script>