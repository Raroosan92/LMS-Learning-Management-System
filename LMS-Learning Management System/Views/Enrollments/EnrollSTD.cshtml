    $("[id$=Check_Btn]").on('click', function (e) {

        var Card_No = $('#Card_No').val();
        var Password_Card = $('#Password_Card').val();
        if (confirm("هل انت متأكد من معلومات البطاقة")) {
            $.ajax({
                url: "/Enrollments/Check_Crad",
                type: "POST",
                data: { "Card_No": Card_No, "Password_Card": Password_Card },
                success: function (response) {
                    if (response.length != 0) {
                        $(response).each(function () {
                            if (response != null) {
                                if (this.cardStatus == false) {
                                    $('#NumberOfSubjects_div').css('display', 'none');
                                    $('#NumberOfSubjects').val();
                                    $('#subject_div').css('display', 'none');
                                    $('#Class_div').css('display', 'none');
                                    $('#Enroll_Btn').css('display', 'none');
                                    $('#Card_No').select();
                                    alert("البطاقة المدخلة غير مفعلة")
                                }
                                else if (this.userId != null) {
                                    $('#NumberOfSubjects_div').css('display', 'none');
                                    $('#NumberOfSubjects').val();
                                    $('#subject_div').css('display', 'none');
                                    $('#Class_div').css('display', 'none');
                                    $('#Enroll_Btn').css('display', 'none');
                                    $('#Card_No').select();
                                    alert("البطاقة المدخلة مستخدمة مسبقاً")
                                }
                                else {


                                    $('#NumberOfSubjects_div').css('display', 'block');
                                    $('#NumberOfSubjects').val(this.numberOfSubjects);
                                    $('#subject_div').css('display', 'block');
                                    $('#Class_div').css('display', 'block');
                                    $('#Enroll_Btn').css('display', 'block');

                                }
                            }
                           

                        })
                    }
                    else {
                        $('#NumberOfSubjects_div').css('display', 'none');
                        $('#NumberOfSubjects').val();
                        $('#subject_div').css('display', 'none');
                        $('#Class_div').css('display', 'none');
                        $('#Card_No').select();
                        alert("معلومات البطاقة غير صحيحة يرجى التأكدة من المعلومات المدخلة")
                    }
                },
                error: function (request, status, error) {
                    alert("معلومات البطاقة غير صحيحة يرجى التأكدة من المعلومات المدخلة")
                    $('#Card_No').select();
                }
            });
        }

    });

    const form = document.getElementById('myForm');
    form.addEventListener('keypress', function (e) {
        if (e.keyCode === 13) {
            e.preventDefault();
        }
    });

