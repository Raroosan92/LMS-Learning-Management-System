@model LMS_Learning_Management_System.Models.Mixed_Enrollments_CardDetails


@{
    ViewData["Title"] = "التسجيل في الحصص";
}

<style>


    .global-container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }



    .card-title {
        font-weight: 300;
    }

    .btn {
        font-size: 14px;
        margin-top: 20px;
    }

    .login-form {
        width: 330px;
        margin: 20px;
    }

    .sign-up {
        text-align: center;
        padding: 20px 0 0;
    }

    .alert {
        margin-bottom: -30px;
        font-size: 13px;
        margin-top: 20px;
    }

    .wrapper {
        margin: 10vh;
    }
</style>

<section class="wrapper">
    <div class="container">
        <div class="row">
            <div class="global-container">
                <div class="card login-form">
                    <div class="card-body">
                        <h3 class="card-title text-center">ادخل تفاصيل البطاقة</h3>
                        <div class="card-text">
                            <form asp-action="EnrollSTD1" onsubmit="CheckList()" id="myForm">
                                <div class="form-group">
                                    <input type="hidden" id="numberOfSubjects_Hidden" readonly>
                                    <label>رقم البطاقة</label>
                                    <input type="number" class="form-control form-control-sm" asp-for="Card_No" autocomplete="off">
                                    <span asp-validation-for="Card_No" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label>الرقم السري للبطاقة</label>
                                    <input class="form-control form-control-sm" asp-for="Password_Card" autocomplete="off">
                                    <span asp-validation-for="Password_Card" class="text-danger"></span>

                                </div>
                                <a id="Check_Btn" class="btn btn-outline-danger">تحقق من المعلومات</a>


                                <div class="form-group" id="NumberOfSubjects_div" style="display:none">
                                    <label>عدد المواد المسموح بالتسجيل بها</label>
                                    <input class="form-control form-control-sm" asp-for="NumberOfSubjects" disabled readonly>
                                </div>

                                <div class="form-group" id="subject_div" style="display:none">

                                    <div class="form-group">
                                        <label asp-for="SubjectId" class="control-label"></label>
                                        <select id="lstSubjecs" name="lstSubjecs" multiple multiselect-search="true" multiselect-select-all="true" asp-items="ViewBag.SubjectId" class="form-control" required></select>

                                        @*<select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId" required></select>*@
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ClassId" class="control-label"></label>
                                        <select id="lstClasses" name="lstClasses"  asp-items="ViewBag.ClassId" class="form-control" required>
                                            <option value="">-- أختر --</option>
                                        </select>

                                        @*<select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId" required></select>*@
                                    </div>
                                    <input type="submit" value="تسجيل" class="btn btn-outline-danger" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/js/jquery3.3.1.js"></script>
<script src="~/js/multiselect-dropdown.js"></script>
