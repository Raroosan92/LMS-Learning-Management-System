@model IEnumerable<LMS_Learning_Management_System.Models.Class>

@{
    ViewData["Title"] = "عرض المستويات";
}

<h1>المحتويات</h1>

<p>
    <a asp-action="Create" class="btn btn-success">اضافة جديدة</a>
</p>

<table id="classes" class="table table-striped table-bordered table-inverse table-responsive ">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Descriptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedUser)
            </th>
            <th></th>

        </tr>

    </thead>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#classes").DataTable({
                "ajax": {
                    "url": "@Url.Action("GetData", "Classes")",
                    "type": "POST",
                    "data": "{}",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "descriptions" },
                    { "data": "status2" },
                    { "data": "createdDate" },
                    { "data": "createdUser" },
                    {
                        "data": "id", "render": function (data) {
                            return "<a asp-action='Edit' onclick=PopupFormCource('@Url.Action("Edit", "Classes")/" + data + "') class='btn btn-warning'>تعديل</a> |<a asp-action='Details' onclick=PopupFormCource('@Url.Action("Details", "Classes")/" + data + "') class='btn btn-info'>عرض التفاصيل</a> |<a asp-action='Delete' onclick=DeleteCource(" + data +") class='btn btn-danger'>حذف</a> ";
                        },
                        "orderable": true,
                        "searchable": true,
                        "width": "auto"
                    }
                ],
                "language": {
                    "emptyTable": "لا يوجد بيانات يرجى الضغط على زر اضافة جديدة"
                }
            });




        });



        function PopupFormCource(url) {
            var formDiv = $('<div/>');
                $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'المستويات',
                        height: 500,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });

                });
        }



        function DeleteCource(id) {
            if (confirm('هل أنت متأكد أنك تريد حذف السجل؟'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "classes")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                            setTimeout(function () {
                                window.location.reload();
                            }, 2000);
                        }
                    }

                });
            }
        }
    </script>
}